NOCODB_AUTH_JWT_SECRET=nocodb-auth-jwt-secret-change-me-2024
NOCODB_ADMIN_PASSWORD=secure_nocodb_password_2024
NOCODB_DBNAME=nocodb
NOCODB_DBUSER=nocodb
